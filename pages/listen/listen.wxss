/* pages/listen/listen.wxss */
page{
  height:100%;
}
.bg {
  width: 100%;
  height: 100%;
  position:fixed; 
  background-size:100% 100%;
  z-index: -1;
}
#top image{
				animation:go 4s linear infinite;
				display:block;
				margin:0 auto;
			}
			@keyframes go{
				from{
					transform:rotate(0deg);
				}
				to{
					transform:rotate(360deg);
				}
			}

		    #top image:hover{
				animation-play-state:paused;
			}
			#top image{
				border-radius:90%
			}
			#music{
				width: 300rpx;
        margin: 55rpx auto;
        
			
			}